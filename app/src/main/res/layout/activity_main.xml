<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dell.miniproject.MainActivity"
    android:layout_centerVertical="true"
    android:background="@drawable/img2"
    android:elevation="0dp">

    <Button
        android:text="INSTRUCTIONS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rulesid"
        android:onClick="Rules"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/startid"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/startid"
        android:background="@drawable/shape10"
        android:textColor="#43e9de"
        android:fontFamily="serif"
        android:textStyle="normal|bold|italic"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

    <Button
        android:text="Play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/startid"
        android:onClick="Start"
        android:background="@drawable/shape10"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="serif"
        android:textStyle="normal|bold|italic"
        android:textSize="36sp"
        android:textColor="#43e9de"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/balid" />

    <TextView
        android:text="200"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/balid"
        android:textStyle="normal|bold"
        android:textAlignment="textStart"
        android:textColor="#43e9de"
        android:background="@drawable/shape10"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="24sp"
        android:layout_marginEnd="8dp" />

    <ToggleButton
        android:text="ToggleButton"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/audioid"
        android:background="@android:drawable/ic_lock_silent_mode_off"
        android:backgroundTint="#43e9de"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/rulesid"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/rulesid"
        android:layout_marginBottom="8dp" />

    <TextView
        android:text="23:59:59"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timeid"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textColor="#43e9de"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        android:layout_marginStart="3dp"
        app:layout_constraintLeft_toRightOf="@+id/textView" />

    <TextView
        android:text="COINS:"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/textView2"
        app:layout_constraintRight_toLeftOf="@+id/balid"
        android:layout_marginEnd="2dp"
        app:layout_constraintTop_toTopOf="@+id/balid"
        app:layout_constraintBottom_toBottomOf="@+id/balid"
        android:textColor="#43e9de"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textSize="24sp" />

    <TextView
        android:text="Free Coins in:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="#43e9de"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_marginTop="3dp"
        android:layout_marginStart="2dp" />


</android.support.constraint.ConstraintLayout>
